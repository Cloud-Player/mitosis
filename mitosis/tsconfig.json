{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es2018",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "baseUrl": ".",
    "paths": {
      "rxjs": [
        "node_modules/rxjs"
      ]
    },
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
