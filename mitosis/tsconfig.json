{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "baseUrl": ".",
    "paths": {
      "rxjs": ["node_modules/rxjs"]
    },
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
